@page
@model Auth.Areas.Identity.Pages.Account.InfoPageProfileModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Medics</title>
	<link rel="stylesheet" href="~/css/FillWordInfo11.css">
	<script src="~/lib/daypilot/daypilot-all.min.js"></script>

	<link rel="stylesheet" href="~/css/CreateMed1.css">
    <style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .discussion-container {
        max-height: 600px;
        overflow-y: auto;
    }

    .medic-info {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .medic-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-right: 20px;
        background-size: cover;
        background-position: center;
    }

    .medic-details {
        flex-grow: 1;
    }

    .clinic-info {
        margin-top: 20px;
    }

    .medic-name,
    .medic-specialization,
    .clinic-name,
    .clinic-address,
    .meeting-time {
        font-size: 18px;
        padding: 5px;
    }
</style>
</head>
<body>

    <div class="header-chat">
        <i class="icon fa fa-user-o" aria-hidden="true"></i>

        <p class="name">@Model.Pacient.Id</p>

        <i class="icon clickable fa fa-ellipsis-h right" aria-hidden="true"></i>
    </div>
    <div class="medic-info">
        <div class="medic-image" style="background-image: url('/photos/@Model.Pacient.ImageFileName')"></div>
        <div class="medic-details">
            <div class="medic-name">[@Model.Pacient.FirtsName @Model.Pacient.LastName @Model.Pacient.Patronymic]</div>
            <div class="medic-specialization">Специализация: @Model.Pacient.Specialization</div>

            <a href="/Identity/MedicalCard/FillnfoWord?id=@Model.Pacient.Id">Medical Card</a>
        </div>
    </div>

</body>
</html>