@page
@model Auth.Areas.Identity.Pages.ClientMedic.AppointmentInfoModel
@{
}

@{
    Layout = null; // Заборонити відображення _Layout.cshtml на цій сторінці
}


@using Microsoft.AspNetCore.Identity
@using Auth.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medics</title>
    <link rel="stylesheet" href="~/css/MedicalCard110.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .discussion-container {
            max-height: 820px;
            overflow-y: auto;
        }

        .medic-info {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .medic-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-right: 20px;
            background-size: cover;
            background-position: center;
        }

        .medic-details {
            flex-grow: 1;
        }

        .clinic-info {
            margin-top: 20px;
        }

        .medic-name,
        .medic-specialization,
        .clinic-name,
        .clinic-address,
        .meeting-time {
            font-size: 25px; 
            padding: 5px; 
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

            ul li {
                display: inline-block;
                width: 45%;
                box-sizing: content-box;
                float: left;
                margin-bottom: 4px;
                margin-right: 4px;
                clear: right;
                font-size: 16px;
            }

                ul li span {
                    display: block;
                    padding: 5px 15px;
                    color: #444;
                }

                    ul li span:first-child {
                        font-weight: bold;
                        letter-spacing: 1px;
                        text-transform: uppercase;
                    }

        .buttons {
            padding: 50px;
            font-size: 20px;
            padding-top: 25%;
            padding-left: 20%;
            display: flex;
            align-items: center;
        }

            .buttons a {
                margin-right: 10%;
                text-decoration: none;
                color: #fff;
                background-color: #6495ED;
                padding: 10px 20px;
                border-radius: 5px;
                border: none;
                transition: background-color 0.3s ease; 
            }

                .buttons a:hover {
                    background-color: #6495ED;
                }

        .header-chat a {
            background-color: #6495ED;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-left: 10%;
            margin-left: auto;
            text-align: center;
            font-size: 20px; 
            line-height: 40px;
        }

    </style>
</head>
<body>
    <div class="header-chat">
        <i class="icon fa fa-user-o" aria-hidden="true"></i>

        <p class="name">@Model.Doctor.Id</p>

        <p class="name">@Model.SlotIdOut</p>

        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("seller")){
                <a href="/Identity/ClientMedic/DeleteAppointment?id=@Model.SlotIdOut" class="btn btn-primary">Завершення зустрічі</a>
            }
        }
    </div>

    @if (SignInManager.IsSignedIn(User))
        {
        if (User.IsInRole("client")){

    <div class="clinic-info">
        <div class="meeting-time">Час зустрічи: @Model.Schedule.Start.ToString("yyyy-MM-dd HH:mm").Substring(0, 16)</div>
    </div>

    <div class="medic-info">
        <div class="medic-image" style="background-image: url('/photos/@Model.Doctor.ImageFileName')"></div>
        <div class="medic-details">
            <div class="medic-name">[@Model.Doctor.FirtsName @Model.Doctor.LastName @Model.Doctor.Patronymic]</div>
                    <div class="medic-specialization">Спеціалізація: @Model.Doctor.Specialization</div>
        </div>
    </div>

    <div class="clinic-info">
                <div class="clinic-name">Електронна Адреса: @Model.Doctor.Email</div>
        <div class="clinic-address">Адреса:  @Model.Doctor.WorkPlace</div>
                <div class="clinic-address">Номер телефону:  @Model.Doctor.PhoneNumber</div>
            </div>
        }
        else if (User.IsInRole("seller"))
        {
            <div class="textinf">
            <ul>
                <li>
                    <span>ID картки</span><span>@Model.Doctor.Id</span>
                </li>
                <li>
                    <span>По батькові</span><span>@Model.Doctor.FirtsName @Model.Doctor.Patronymic</span>
                </li>
                <li>
                    <span>Прізвище</span><span>@Model.Doctor.LastName</span>
                </li>
                <li>
                    <span>Email</span><span>@Model.Doctor.Email</span>
                </li>
                <li>
                    <span>Стать</span><span>@Model.Doctor.Gender</span>
                </li>
                <li>
                    <span>Дата народження</span><span>@Model.Doctor.DateOfBirth</span>
                </li>
                <li>
                    <span>Адреса</span><span>@Model.Doctor.Address</span>
                </li>
                <li>
                    <span>Номер телефону</span><span>@Model.Doctor.PhoneNumber</span>
                </li>
            </ul>

            <div class="buttons">
                <a href="/Identity/MedicalCard/MedCardP?id=@Model.Doctor.Id">Переглянути медичну картку</a>
                <a href="/Identity/ClientMedic/DownloadPDF?id=@Model.Doctor.Id">Завантажити PDF</a>
                <a href="/Identity/MedicalCard/FillnfoWord?id=@Model.Doctor.Id">Додати запис</a>
            </div>
            </div>
        }
    }
        </body>
</html>
